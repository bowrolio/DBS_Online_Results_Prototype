{% extends "layouts/layout_standard.njk" %}
{% set serviceName="DORS Prototype Journeys" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% block pageTitle %}
  Select version
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">

    <div class="govuk-grid-column-three-thirds">
      <p class="govuk-body">Select the DORS journey you would like to begin.</p>

      {{ govukTable({
            firstCellIsHeader: false,
            head: [
            {
              text: "Journey"
              },
              {
                text: "Actions"
              },
              {
                text: "Description"
              }
            ],
            rows: [
              [
              {
                classes: "govuk-!-width-one-quarter",
                  text: "Applicant Email"
              },
              {
                classes: "govuk-!-width-one-quarter",
                html:
                  govukButton({
                    text: "Start",
                    href: "/applicant"
                  }) + "" +
                    "<button class='govuk-button govuk-button--secondary center' onclick='navigator.clipboard.writeText(\"https://dbs-or-alpha.herokuapp.com/applicant\")'>
                        Copy Link
                      </button>"
                },
                {
                  classes: "govuk-!-width-one-half",
                    text: "The email an applicant receives when the result is ready to view."
                  }
              ],
              [
              {
                classes: "govuk-!-width-one-quarter",
                  text: "Applicant Landing"
              },
              {
                classes: "govuk-!-width-one-quarter",
                html:
                  govukButton({
                    text: "Start",
                    href: "/start"
                  }) + "" +
                    "<button class='govuk-button govuk-button--secondary center' onclick='navigator.clipboard.writeText(\"https://dbs-or-alpha.herokuapp.com/start\")'>
                        Copy Link
                      </button>"
                },
                {
                  classes: "govuk-!-width-one-half",
                    text: "The first page an applicant lands on in the DORS journey after clicking the link in the applicant email, before GOV UK One Login sign in."
                  }
              ],
              [
              {
                classes: "govuk-!-width-one-quarter",
                  text: "Applicant Result"
              },
              {
                classes: "govuk-!-width-one-quarter",
                html:
                  govukButton({
                    text: "Start",
                    href: "/applicant-result"
                  }) + "" +
                    "<button class='govuk-button govuk-button--secondary center' onclick='navigator.clipboard.writeText(\"https://dbs-or-alpha.herokuapp.com/applicant-result\")'>
                        Copy Link
                      </button>"
                },
                {
                  classes: "govuk-!-width-one-half",
                    text: "The result page an applicant will see after signing in using Gov UK One Login (1 result)."
                  }
              ],
              [
              {
                classes: "govuk-!-width-one-quarter",
                  text: "Applicant Share Email"
              },
              {
                classes: "govuk-!-width-one-quarter",
                html:
                  govukButton({
                    text: "Start",
                    href: "/RB_cert_email"
                  }) + "" +
                    "<button class='govuk-button govuk-button--secondary center' onclick='navigator.clipboard.writeText(\"https://dbs-or-alpha.herokuapp.com/RB_cert_email\")'>
                        Copy Link
                      </button>"
                },
                {
                  classes: "govuk-!-width-one-half",
                    text: "The email sent to an applicant when a share code is generated. The applicant will forward this email to a third party (often, a potential employer) to begin the third party journey."
                  }
              ],
              [
              {
                classes: "govuk-!-width-one-quarter",
                  text: "Third Party Landing"
              },
              {
                classes: "govuk-!-width-one-quarter",
                html:
                  govukButton({
                    text: "Start",
                    href: "/employer/employer_view_check"
                  }) + "" +
                    "<button class='govuk-button govuk-button--secondary center' onclick='navigator.clipboard.writeText(\"https://dbs-or-alpha.herokuapp.com/employer/employer_view_check\")'>
                        Copy Link
                      </button>"
                },
                {
                  classes: "govuk-!-width-one-half",
                    text: "	The first page a third party lands on in the DORS journey after clicking the link in the applicant share email."
                  }
              ]

              ]


          }) }}
    </div>
  </div>

{% endblock %}
