{% extends "layouts/layout_progress_tracker.njk" %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/task-list/macro.njk" import govukTaskList %}

{% block pageTitle %}
  Track the progress of your DBS check â€“ GOV.UK Prototype Kit
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">

    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-xl">Track the progress of your DBS check</h1>
      <p>This tracking information is updated daily, Monday to Friday. It is not updated at weekends.</p>
      <p>It was last updated {{ currentDate }}</p>

      {{ govukInsetText({
        text: "We will email you when your DBS check is complete."
      }) }}

      {{ govukTaskList({
  idPrefix: "company-details",
  items: [
    {
      title: {
        text: "Stage 1",
        classes: "govuk-heading-s"
      },
      hint: {
        text: "Application received"
      },
      status: {
        text: "Completed " + formattedDateOneWeekAgo
      }
    },
    {
      title: {
        text: "Stage 2",
        classes: "govuk-heading-s"
      },
      hint: {
        text: "Police National Computer searched"
      },
      status: {
        tag: {
          text: "In progress",
          classes: "govuk-tag--light-blue"
        }
      }
    },
    {
      title: {
        text: "Stage 3",
        classes: "govuk-heading-s"
      },
      hint: {
        text: "Barred lists checked (if required)"
      },
      status: {
        tag: {
          text: "Not started",
          classes: "govuk-tag--blue"
        }
      }
    },
    {
      title: {
        text: "Stage 4",
        classes: "govuk-heading-s"
      },
      hint: {
        text: "Records held by police searched"
      },
      status: {
        tag: {
          text: "Not started",
          classes: "govuk-tag--blue"
        }
      }
    },
    {
      title: {
        text: "Stage 5",
        classes: "govuk-heading-s"
      },
      hint: {
        text: "DBS check issued"
      },
      status: {
        tag: {
          text: "Not started",
          classes: "govuk-tag--blue"
        }
      }
    }
  ]
}) }}

    </div>
  </div>

{% endblock %}
