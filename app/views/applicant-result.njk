{% extends "layouts/layout_onelogin.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% set pageId = "view-your-result" %}

{% block pageTitle %}
  Your online result – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: "beta"
    },
    html: 'This is a new service. Help us improve it and <a class="govuk-link" target="_blank" href="#">give your feedback (opens in a new tab).</a>'
  }) }}

{% endblock %}

{% block content %}
  <div class="govuk-grid-row">

    <div class="govuk-width-container">

      {% include "result_partial.njk" %}

      <a href="/applicant-share-1" class="govuk-button">
        Share Result
      </a>

      {{ govukInsetText({
                  html: "<p>You can <a href='/applicant-contact'>contact DBS</a> if you need to report a mistake or dispute the result.</p>"
                }) }}

      {{ govukDetails({
          summaryText: "Disclaimer",
          text: "This Disclosure and Barring Service (DBS) Online Result is a ((DBS Check level)) Criminal Record Certificate within the meaning of the following sections of the Police Act 1997 (the Act):

          ((section))

          ((section))

          Use of DBS Online Result information
        The information contained in this DBS Online Result is confidential. All recipients must keep it secure and protect it from loss or unauthorised access."
        }) }}
    </div>

  </div>
</div>{% endblock %}{% block footer %}
{% include "footer.njk" %}{% endblock %}
